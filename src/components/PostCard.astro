---
export interface Props {
  count: number;
  post: any;
  slug: string;
}

const { post, slug } = Astro.props;
const thumbnail = post.data.thumbnail;
const title = post.data.title;
---

<article class={`post-card ${thumbnail ? 'with-image' : 'no-image'} post`}>
  <a href={`/${slug}/`} class="post-card-link">
    {thumbnail && (
      <div class="post-card-image-wrap">
        <img src={thumbnail} alt={title} class="post-card-image" loading="lazy" />
      </div>
    )}

    <div class="post-card-content">
      <h2 class="post-card-title">{title}</h2>
    </div>
  </a>
</article>

<style>
.post-card { min-height: 42rem; }

.post-card-link {
  text-decoration: none;
  color: #505050;
  display: block;
}

.post-card-image-wrap {
  background: #f1f1f1;
  aspect-ratio: 0.8 / 1;
  overflow: hidden;
}

.post-card-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  filter: brightness(0.98);
}

.post-card-content {
  padding: 1.7rem 0.6rem 0;
  text-align: center;
}

.post-card-title {
  margin: 0;
  font-size: 1.6rem;
  line-height: 1.5;
  font-weight: 400;
}

.post-card.no-image {
  border: 1px solid #e6e6e6;
  background: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
}

.post-card.no-image .post-card-content {
  padding: 2.8rem;
}

.post-card-link:hover .post-card-title {
  text-decoration: underline;
}

@media (max-width: 900px) {
  .post-card { min-height: 0; }
  .post-card-image-wrap { aspect-ratio: 0.9 / 1; }
  .post-card-title { font-size: 1.8rem; }
}
</style>
