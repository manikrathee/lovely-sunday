{
  "name": "clay-astro-theme",
  "version": "1.0.0",
  "description": "A minimalist, high-performance Astro theme for photographers and artists.",
  "scripts": {
    "dev": "astro dev & caddy run --config Caddyfile",
    "dev:astro": "astro dev",
    "build": "astro build && npm run qa:parity",
    "build:astro": "astro build",
    "qa:parity": "node scripts/qa/parity-gate.mjs && npm run check:gallery-orientations",
    "check:gallery-orientations": "node scripts/check-gallery-orientations.mjs",
    "preview": "astro preview",
    "astro": "astro",
    "deploy:s3": "bash scripts/deploy-to-s3.sh",
    "verify:urls": "node scripts/verify-post-deploy-urls.mjs",
    "deploy:production": "bash scripts/deploy-and-verify.sh",
    "check:routes": "node scripts/verify-route-manifest.mjs"
  },
  "dependencies": {
    "@astrojs/sitemap": "^3.6.0",
    "@astrolib/analytics": "^0.6.1",
    "@nuasite/cms": "^0.8.3",
    "@nuasite/llm-enhancements": "^0.8.3",
    "@swup/head-plugin": "^2.3.1",
    "agentation": "^2.2.1",
    "astro": "^5.16.5",
    "astro-breadcrumbs": "^3.3.3",
    "astro-capo": "^0.0.1",
    "astro-compressor": "^1.2.0",
    "astro-google-fonts-optimizer": "^0.2.2",
    "astro-navbar": "^2.4.0",
    "astro-og-canvas": "^0.10.1",
    "astro-robots-txt": "^1.0.0",
    "astro-seo": "^1.1.0",
    "autoprefixer": "^10.4.23",
    "postcss": "^8.5.6",
    "postcss-color-function": "^4.1.0",
    "postcss-custom-properties": "^14.0.6",
    "postcss-easy-import": "^4.0.0",
    "swup": "^4.8.2"
  },
  "devDependencies": {
    "cheerio": "^1.2.0",
    "playwright": "^1.52.0"
  }
}
